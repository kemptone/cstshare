---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="CSTShare - Logic Pro Settings Library">
  <div class="space-y-12">
    <!-- Hero Section -->
    <section class="text-center py-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">
        CSTShare
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        A community-driven library of Logic Pro Channel Strip Settings, patches, plug-in presets, and production tips
      </p>
      <div class="flex gap-4 justify-center">
        <a href={`${base}settings`} class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-medium">
          Browse Settings
        </a>
        <a href={`${base}contribute`} class="bg-gray-200 text-gray-900 px-6 py-3 rounded-lg hover:bg-gray-300 transition font-medium">
          Contribute
        </a>
      </div>
    </section>

    <!-- Features -->
    <section class="grid md:grid-cols-3 gap-8">
      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="text-blue-600 text-3xl mb-4">üéöÔ∏è</div>
        <h3 class="text-lg font-semibold mb-2">Channel Strip Settings</h3>
        <p class="text-gray-600">
          Professionally crafted channel strips for vocals, guitars, drums, and more
        </p>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="text-blue-600 text-3xl mb-4">üéπ</div>
        <h3 class="text-lg font-semibold mb-2">Instrument Patches</h3>
        <p class="text-gray-600">
          Ready-to-use patches for Logic's built-in instruments and third-party plugins
        </p>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
        <div class="text-blue-600 text-3xl mb-4">üìù</div>
        <h3 class="text-lg font-semibold mb-2">Production Tips</h3>
        <p class="text-gray-600">
          Learn from the community through blog posts and workflow guides
        </p>
      </div>
    </section>

    <!-- Quick Stats -->
    <section class="bg-white p-8 rounded-lg shadow-sm border border-gray-200">
      <h2 class="text-2xl font-bold mb-6 text-center">What's Inside</h2>
      <div class="grid md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-3xl font-bold text-blue-600">3</div>
          <div class="text-gray-600 text-sm mt-1">Channel Strips</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600">55+</div>
          <div class="text-gray-600 text-sm mt-1">Plug-in Settings</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600">3</div>
          <div class="text-gray-600 text-sm mt-1">Patches</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600">Open</div>
          <div class="text-gray-600 text-sm mt-1">Source</div>
        </div>
      </div>
    </section>

    <!-- Getting Started -->
    <section class="bg-blue-50 p-8 rounded-lg border border-blue-100">
      <h2 class="text-2xl font-bold mb-4">Getting Started</h2>
      <div class="space-y-4 text-gray-700">
        <div class="flex items-start gap-3">
          <span class="bg-blue-600 text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-sm font-medium">1</span>
          <div>
            <strong>Clone the repository:</strong>
            <code class="block bg-white px-3 py-2 rounded mt-2 text-sm">git clone [repository-url]</code>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <span class="bg-blue-600 text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-sm font-medium">2</span>
          <div>
            <strong>Copy settings to your Logic Pro folder:</strong>
            <code class="block bg-white px-3 py-2 rounded mt-2 text-sm">~/Music/Audio Music Apps/</code>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <span class="bg-blue-600 text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-sm font-medium">3</span>
          <div>
            <strong>Open Logic Pro</strong> and find the settings in your library
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
